generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum DoseScheduleStatus {
  PENDING
  COMPLETED
  DELAYED
  MISSED
}

model DoseSchedule {
  id            String            @id @default(uuid())
  prescriptionId String
  patientId     String
  scheduledAt   DateTime
  status        DoseScheduleStatus @default(PENDING)
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt

  @@index([prescriptionId])
  @@index([patientId])
  @@index([scheduledAt])
  @@map("dose_schedules")
}

